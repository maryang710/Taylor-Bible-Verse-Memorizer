<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="top" >
    
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memorize_first_letters_instructions_title_view"
        android:text="@string/memorize_first_letters_instructions_title"
        tools:context=".Memorize"
        android:gravity="center"
        android:padding="10dip"
        android:textSize="24sp" />
   
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memorize_first_letters_instructions_view"
        android:text="@string/memorize_first_letters_instructions_text"
        tools:context=".Memorize"
        android:gravity="left"
        android:padding="10dip"
        android:textSize="24sp" />
   
   <Button
		android:id="@+id/memorize_first_letters_instructions_button"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/end_instructions_button_label"
		android:gravity="center"
		android:textSize="24sp"
		android:padding="10dip" />
   
</LinearLayout>
